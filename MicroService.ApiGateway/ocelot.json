{
  "Routes": [
    //Product Api //routing iþlemleri yapýlýyor.
    {
      "DownstreamPathTemplate": "/api/v1/Product",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "sourcingproducts", //Dockercompose.yml dosyasýndaki ismi yazýyoruz.
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Product", //uygulamaya geldiði port bilgisi
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ] //hangi metotlara ulaþmak istedði bilgisi
    },
    {
      "DownstreamPathTemplate": "/api/v1/Product/{id}",
